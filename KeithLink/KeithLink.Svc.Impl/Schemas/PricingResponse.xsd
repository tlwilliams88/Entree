<?xml version="1.0" encoding="UTF-8"?>
<xs:schema id="PricingResponse" xmlns="" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:msdata="urn:schemas-microsoft-com:xml-msdata">
	<xs:annotation>
		<xs:documentation>
			Request Prices Response Schema for Power Net
			Copyright 2009 Retalix. All rights reserved.
		</xs:documentation>
	</xs:annotation>

  <xs:element name="PricingResponseMain" msdata:IsDataSet="true">
    <xs:complexType>
      <xs:choice minOccurs="1" maxOccurs="1">
        <xs:element ref="PricingResponse"/>
      </xs:choice>
    </xs:complexType>
  </xs:element>
  
	<xs:element name="PricingResponse" msdata:IsDataSet="true">
		<xs:complexType>
			<xs:choice>
				<xs:sequence>
					<xs:element maxOccurs="1" minOccurs="1" ref="Customer" msdata:rowOrder="0"/>
					<xs:element maxOccurs="1" minOccurs="0" name="ShipDate" type="xs:string" msdata:rowOrder="1"/>
					<xs:element maxOccurs="1" minOccurs="1" ref="Items" msdata:rowOrder="2" />
				</xs:sequence>
				<xs:element maxOccurs="1" minOccurs="0" name="ErrorMessage" type="xs:string"/>
			</xs:choice>
		</xs:complexType>
	</xs:element>

	<xs:element name="Customer" msdata:IsDataSet="true">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Company" type="companyType"/>
				<xs:element name="Division" type="companyType"/>
				<xs:element name="Department" type="companyType"/>
				<xs:element name="Number" type="customerType"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="Items" msdata:IsDataSet="true">
		<xs:complexType>
			<xs:sequence>
				<xs:element maxOccurs="unbounded" minOccurs="1" ref="Item"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="Item" msdata:IsDataSet="true">
		<xs:complexType>
			<xs:sequence>
				<xs:element maxOccurs="1" minOccurs="1" ref="Prices"/>
				<xs:element maxOccurs="1" minOccurs="1" name="AllowanceTotal" type="allowancePriceType"/>
				<xs:element maxOccurs="1" minOccurs="1" name="OutOfStock" type="yesNoType"/>
			</xs:sequence>
			<xs:attribute name="number" type="itemNumberType" use="required"/>
		</xs:complexType>
	</xs:element>

	<xs:element name="Prices" msdata:IsDataSet="true">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="NetCase" type="pricesType"/>
				<xs:element name="NetEach" type="pricesType"/>
				<xs:element name="GrossCase" type="pricesType"/>
				<xs:element name="GrossEach" type="pricesType"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<!-- Power Net Specific data types -->
	<xs:simpleType name="companyType">
		<xs:restriction base="xs:string">
			<xs:pattern value="[A-Z0-9\s]{3}"/>
			<xs:whiteSpace value="preserve"/>
		</xs:restriction>
	</xs:simpleType>

	<xs:simpleType name="customerType">
		<xs:restriction base="xs:string">
			<xs:pattern value="([A-Z0-9\-])*"/>
			<xs:minLength value="1"/>
			<xs:maxLength value="10"/>
		</xs:restriction>
	</xs:simpleType>

	<xs:simpleType name="yesNoType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="N"/>
			<xs:enumeration value="Y"/>
		</xs:restriction>
	</xs:simpleType>

	<xs:simpleType name="itemNumberType">
		<xs:restriction base="xs:string">
			<xs:pattern value="([A-Z0-9\-])*"/>
			<xs:minLength value="1"/>
			<xs:maxLength value="10"/>
		</xs:restriction>
	</xs:simpleType>

	<xs:simpleType name="pricesType">
		<xs:restriction base="xs:decimal">
			<xs:totalDigits value="9"/>
			<xs:fractionDigits value="4"/>
			<xs:minInclusive value="0.0"/>
			<xs:maxInclusive value="99999.9999"/>
		</xs:restriction>
	</xs:simpleType>

	<xs:simpleType name="allowancePriceType">
		<xs:restriction base="xs:decimal">
			<xs:totalDigits value="9"/>
			<xs:fractionDigits value="2"/>
			<xs:minInclusive value="0.0"/>
			<xs:maxInclusive value="9999999.99"/>
		</xs:restriction>
	</xs:simpleType>
</xs:schema>