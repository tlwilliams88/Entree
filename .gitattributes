# Auto detect text files and perform LF normalization
*        text=auto

*.cs     text eol=crlf diff=csharp
*.java   text diff=java
*.html   text diff=html
*.css    text
*.js     text
*.sql    text

*.h         eol=crlf
*.cpp       eol=crlf
*.rc        eol=crlf
*.vcproj    eol=crlf
*.bat       eol=crlf
*.sln       eol=crlf
*.ico       -text

*.csproj text merge=union
*.sln    text merge=union eol=crlf